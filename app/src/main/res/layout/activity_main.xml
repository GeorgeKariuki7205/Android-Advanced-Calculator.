<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#00ffff">
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="serif-monospace"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="CASIO"
            android:textAlignment="textStart"
            android:textColor="#ff0000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="FX-Sm-86"
            android:layout_gravity="end"
            android:textColor="#ff0000"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:paddingRight="20dp"
            android:textColor="#ff000000"
            android:background="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
           android:nestedScrollingEnabled="true"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="9"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click9"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click8"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="7"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click7"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00ff00"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="ClickPlus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click6"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click5"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click4"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00ff00"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="ClickMinus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click3"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click2"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click1"/>

        <Button
            android:id="@+id/btnTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00ff00"
            android:text="*"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="ClickTimes"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="Click0"/>

        <Button
            android:id="@+id/btnPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:text="."
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="ClickPoint"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00ff00"
            android:text="/"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="ClickDivision"/>
        <Button
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00ff00"
            android:text="="
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:onClick="HandleEquals"
            />
    </LinearLayout>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="0dp"
    >
    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:text="CLEAR"
        android:textSize="15sp"
        android:textStyle="bold"
        android:onClick="HandleClear"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        />
    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#00ff00"
        android:text="EXIT"
        android:textSize="15sp"
        android:textStyle="bold"
        android:onClick="handleExit"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        />

</LinearLayout>
      <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_marginLeft="35sp">
          <TextView
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="@string/name"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:fontFamily="monospace"
              >

          </TextView>
      </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>